{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<h1>Adicionar Categoria: </h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/addcategorias" method="post">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" class="form form-control mb-3" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form form-control mb-3" required>
            <button type="submit" class="btn btn-success">Enviar</button>
        </form>
    </div>
</div>