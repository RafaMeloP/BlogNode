{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<h3>Adicionar Postagem: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/add" enctype="multipart/form-data" method="post">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" id="titulo" class="form form-control mb-2" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form form-control mb-2" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form form-control mb-2" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" class="form-control mb-2"></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria" class="form-control mb-2">
                {{#each categorias}}
                    <option value={{_id}}>{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria criada</option>
                {{/each}}
            </select>
            <label for="img">Imagem</label>
            <input type="file" name="img" id="img" class="form-control mb-2" required>
            <button type="submit" class="btn btn-success">Enviar</button>
        </form>
    </div>
</div>