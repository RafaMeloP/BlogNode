{{#each postagens}}
<div class="postagens">
    <div class="card mt-2">
        <div class="card-body">
            <div class="imagem-postagem">
                <img src="{{img}}" alt="">
            </div>
            <div class="conteudo">
                <p>{{categoria.nome}}</p>
                <h1>{{titulo}}</h1>
                <small>{{descricao}}</small>
                <hr>
                <div class="pull-right d-flex justify-content-between mt-2">
                    <a href="/admin/postagens/edit/{{_id}}">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </a>
                    <form action="/admin/postagens/deletar" method="post">
                        <input type="hidden" name="id" value={{_id}}>
                        <button type="submit" class="btn btn-danger">Deletar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<h4>Sem postagens criadas...</h4>
{{/each}}